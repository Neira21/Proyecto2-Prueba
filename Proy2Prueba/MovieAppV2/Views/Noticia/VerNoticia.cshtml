<div class="container">


@for(var i=0;i<(Model.Count); i++)
{
  
  @if(i%2==0 ){
      <div class="row mb-2">
          <div class="col-md-11">
            <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
              
              <div class="hola" >
                <img  src="@Html.DisplayFor(modelItem => Model[i].Imagen)" width="165" height="300">
              </div>
              <div class="col p-4 d-flex flex-column position-static">

                <strong class="d-inline-block mb-2 text-primary">@Html.DisplayFor(modelItem => Model[i].Genero)</strong>
                <h3 class="mb-0">@Html.DisplayFor(modelItem => Model[i].Titulo) </h3>
                <div class="mb-1 text-muted">@Html.DisplayFor(modelItem => Model[i].Fecha) </div>
                <p class="card-text mb-auto">@Html.DisplayFor(modelItem => Model[i].contenido) </p>
                <br>
                        @if (User.Identity.IsAuthenticated)
                        {
                        <button class="btn btn-primary" >
                            <a asp-action="EditarNoticia" asp-route-id="@Model[i].ID">Editar</a> 
                        </button>
                        
                        <button class="btn btn-danger">
                            <a asp-action="BorrarNoticia" asp-route-id="@Model[i].ID">Borrar </a>    
                        </button>

                        }
              </div>
            </div>
          </div>
      </div>
  }else{
      <div class="row mb-2">
          <div class="col-md-11">
            <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
              <div class="col p-4 d-flex flex-column position-static">

                <strong class="d-inline-block mb-2 text-primary">@Html.DisplayFor(modelItem => Model[i].Genero)</strong>
                <h3 class="mb-0">@Html.DisplayFor(modelItem => Model[i].Titulo) </h3>
                <div class="mb-1 text-muted">@Html.DisplayFor(modelItem => Model[i].Fecha) </div>
                <p class="card-text mb-auto">@Html.DisplayFor(modelItem => Model[i].contenido) </p>
                <br>
                        @if (User.Identity.IsAuthenticated)
                        {
                        <button class="btn btn-primary" >
                            <a asp-action="EditarNoticia" asp-route-id="@Model[i].ID">Editar</a> 
                        </button>
                        
                        <button class="btn btn-danger">
                            <a asp-action="BorrarNoticia" asp-route-id="@Model[i].ID">Borrar </a>    
                        </button>
                        }
              </div>
              <div class="hola" >
                <img  src="@Html.DisplayFor(modelItem => Model[i].Imagen)" width="165" height="300">
              </div>
              
            </div>
          </div>
      </div>
  }
}
</div>



    

